    "site": "Test Site",
    "grade": "Registrar",
    "fte": 1.0,
    "status": "ACTIVE_ROSTERABLE",
    "core_hours": {"MON": [["09:00", "17:00"]]},
    "eligibility": {"call_policy": {"participates_in_call": true}}
  }'

